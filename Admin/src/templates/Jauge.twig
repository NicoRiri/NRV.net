{% extends 'Layout.twig' %}
{% block content %}
<h1 class="mx-5 text-3xl text-center text-indigo-600 border-b border-indigo-600 pb-2">Jauge</h1>
{% if soirees %}
    <div class="flex flex-row-reverse justify-end flex-wrap-reverse ">
        {% for s in soirees.soiree %}
            <div class="p-10 bg-gray-200 border border-gray-300 m-5 rounded-lg flex-grow hover:scale-125 duration-100">
                <h1 class="text-red-300 font-bold">{{ s.nom }} :</h1>
                <p>{{ s.nbPlaceTotale - s.nbPlaceRestanteTotale }} / {{ s.nbPlaceTotale }} places réservées</p>
                <div class="bar" style="width: 200px;height: 20px;border: 1px solid #000;position: relative;">
                    <div class="green" style="width: calc({{ (s.nbPlaceTotale - s.nbPlaceRestanteTotale) / s.nbPlaceTotale }} *100%); height: 100%;background-color: deepskyblue;"></div>
                </div>
            </div>
        {%  endfor %}
    </div>

{%  endif %}
{% endblock %}